<?xml version="1.0" encoding="UTF-8"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee"
   version="2.5">
  <display-name>MÃ¸lleordbog</display-name>

  <filter>
    <filter-name>AsyncCacheFilter</filter-name>
    <filter-class>com.googlecode.objectify.cache.AsyncCacheFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AsyncCacheFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <display-name>Remote API Servlet</display-name>
    <servlet-name>RemoteApiServlet</servlet-name>
    <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>RemoteApiServlet</servlet-name>
    <url-pattern>/remote_api</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>molleordbog</servlet-name>
    <servlet-class>org.bifrost.molleordbog.MolleOrdbog</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>molleordbog</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
